{sub_dirs, ["apps/*", "rel"]}.
{erl_opts, [{parse_transform, lager_transform}, no_debug_info, native]}.
{deps, [
	{confetti, ".*", {git, "https://github.com/jtendo/confetti.git", master}},
	{ecomponent, ".*", {git, "https://github.com/artefactop/ecomponent.git", {tag, "1.0.0"}}},
	{covertool,".*", {git, "https://github.com/idubrov/covertool.git", master}}
]}.
{cover_enabled, true}.
{cover_print_enable, true}.
 
{plugins, [rebar_covertool]}.
{covertool_prefix_len, 2}.
{cover_export_enabled, true}.
%{eunit_opts, [verbose, {report, {eunit_surefire, [{dir, "."}]}}]}.
